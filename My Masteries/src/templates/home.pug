extends components/app.pug

block content
    div(class="container")
        div(class="row")
            div(class="col-md-4 search-wrapper")
                form(
                    method="GET" 
                    action="/search_summoner" 
                    autocomplete="off"
                    )
                    input(
                        type="text" 
                        name="summoner_name" 
                        placeholder="Search summoner" 
                        required="required"
                        class="summoner-name"
                        )
                    select(name="region" class="region")
                        option(value="BR1") BR
                        option(value="EUN1") EUNE
                        option(value="EUW1") EUNW
                        option(value="JP1") JP
                        option(value="KR") KR
                        option(value="LA1") LAN
                        option(value="LA2") LAS
                        option(value="NA1") NA
                        option(value="OC1") OCE
                        option(value="TR1") TR
                        option(value="RU") RU
                    input(type="submit" value="Search" class="submit")
        include components/error.pug