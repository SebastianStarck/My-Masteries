extends components/app.pug

block content
    div(class="container")
        div(class="row h-100 justify-content-center align-items-center")
            div(class="col-md-5 search-wrapper")
                h1 #{summoner.name}'s masteries
                ul
                  each mastery in topMasteries
                    - const championName = champions[mastery.championId]['id'];
                    li
                        div
                            img(src="http://ddragon.leagueoflegends.com/cdn/" + process.env.DDRAGON_VERSION + "/img/champion/" + championName + ".png")
                            p= `Points: ${mastery.championPoints}`
                            p= `Champion: ${championName}`